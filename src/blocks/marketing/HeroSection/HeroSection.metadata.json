{
  "id": "hero-section",
  "name": "Hero Section",
  "version": "1.0.0",
  "description": "Flexible hero section for marketing pages with multiple layout options, image positioning, and CTA buttons",
  "category": "marketing",
  "tags": ["hero", "landing-page", "above-fold", "conversion", "marketing"],

  "useCase": [
    "landing-pages",
    "product-pages",
    "feature-announcements",
    "campaign-pages",
    "home-pages"
  ],

  "composition": {
    "components": ["Button"],
    "tokens": [
      "semantic-color-background-default",
      "semantic-color-foreground-default",
      "semantic-color-foreground-muted",
      "semantic-color-primary-default"
    ]
  },

  "variants": {
    "layout": ["image-left", "image-right", "image-top", "image-background", "centered"],
    "size": ["compact", "default", "hero", "full"],
    "theme": ["light", "dark", "gradient", "transparent"]
  },

  "props": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Main headline - renders as h1"
    },
    "subtitle": {
      "type": "string",
      "required": false,
      "description": "Supporting text below the headline"
    },
    "image": {
      "type": "string",
      "required": false,
      "description": "Image URL"
    },
    "imageAlt": {
      "type": "string",
      "required": false,
      "default": "",
      "description": "Alt text for image (required for accessibility)"
    },
    "ctaText": {
      "type": "string",
      "required": false,
      "description": "Primary CTA button text"
    },
    "ctaHref": {
      "type": "string",
      "required": false,
      "default": "#",
      "description": "Primary CTA link destination"
    },
    "ctaVariant": {
      "type": "enum",
      "values": ["primary", "secondary", "outline"],
      "default": "primary",
      "description": "Primary CTA button variant"
    },
    "secondaryCtaText": {
      "type": "string",
      "required": false,
      "description": "Secondary CTA button text"
    },
    "badge": {
      "type": "ReactNode",
      "required": false,
      "description": "Optional badge/tag above title"
    },
    "layout": {
      "type": "enum",
      "values": ["image-left", "image-right", "image-top", "image-background", "centered"],
      "default": "image-right"
    },
    "size": {
      "type": "enum",
      "values": ["compact", "default", "hero", "full"],
      "default": "default"
    },
    "theme": {
      "type": "enum",
      "values": ["light", "dark", "gradient", "transparent"],
      "default": "light"
    }
  },

  "accessibility": {
    "wcag": "AA",
    "landmarks": ["region"],
    "headingLevel": "h1",
    "ariaPatterns": ["aria-labelledby"],
    "keyboardNav": true,
    "screenReaderOptimized": true
  },

  "responsive": {
    "breakpoints": ["mobile", "tablet", "desktop"],
    "behavior": "Stacks vertically on mobile, side-by-side on desktop for image layouts"
  }
}
